package study;

public class S003 {

	public static void main(String[] ar) {
		// main 에 있는 args는 약자 argument 
		// String 으로 배열을 만들어보자
		for(String s : ar)
			System.out.printf("%3s",s);
		
		String[]subject = {"국어점수","영어점수","수학점수"};
		for(String ss : subject)
			System.out.printf("%3s\n",ss);
		
		System.out.println();
		char ch[] = new char[4]; //- 배열의 선언
		ch[0]='J';
		ch[1]='A';
		ch[2]='V';
		ch[3]='A';
		for (int i=0; i < ch.length;i++) {
			System.out.println("ch["+i+"]"+ch[i]);}
		char cha[] = {'J','A','V','A'};// 선언과 동시에 갑 입력
		for (int r=0; r < ch.length;r++) {
			System.out.println("cha["+r+"]"+cha[r]);}
		char cha1[]= new char[] {'j','a','v','a'};
		
		for (int s=0; s < ch.length;s++) {
			System.out.println("cha1["+s+"]"+cha1[s]);	}
		
 		
	}

}
