package study;

public class S003 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*문 -1^2+2^2-3^2+4^2-5^2+...........+100^2의 합계를 구하는 프로그램을
		 * 작성하세요// 값은 5050이 나와야한다.
		 */
		int i=1,simbol=1,sum=0;
		while(i<=100) {
			if(i%2==0)
				simbol=-simbol;//기호를 바꾸겠다..?
			sum+=i;
			i++;
		}System.out.println(sum);
		
		
		
		int a=1,r=1,t=0;
		while(a<=100) {
			r=-r;
			t+=r*(a*a);
			a++;
		}System.out.println(sum);
		
		int u,f=0,o=0;
		for(u=1;u<=100;u++) {
			f=u*u;
			if(f%2==0) {f=f+a;}
			else {o=o+a;}
			
		}System.out.println(f-o);
	
	}

}
